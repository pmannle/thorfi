    "axios": "^1.2.1",
    "axios-cache-adapter": "^2.7.3",
    "axios-retry": "^3.3.1",
    "bignumber.js": "^9.1.1",
    "node-fetch": "^3.3.0",
    "react-icons": "^4.7.1"
  }
}
